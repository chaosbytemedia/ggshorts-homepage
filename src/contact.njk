<section class="policy-section contact-page">
    <div class="container">
        <h1 class="section-title">Contact Us</h1>
        <div class="policy-content">
            <div class="contact-grid">
                <div class="contact-info">
                    <h2>Get in Touch</h2>
                    <p>Have questions about GGShorts? We're here to help! Choose the best way to reach us below.</p>

                    <div class="contact-methods">
                        <div class="contact-method">
                            <h3>General Inquiries</h3>
                            <p>Email: info@ggshorts.com</p>
                            <p>Response time: Within 24 hours</p>
                        </div>

                        <div class="contact-method">
                            <h3>Technical Support</h3>
                            <p>Email: support@ggshorts.com</p>
                            <p>Response time: Within 12 hours</p>
                        </div>

                        <div class="contact-method">
                            <h3>Business Inquiries</h3>
                            <p>Email: business@ggshorts.com</p>
                            <p>Response time: Within 48 hours</p>
                        </div>
                    </div>
                </div>

                <div class="contact-form">
                    <h2>Send us a Message</h2>
                    <form id="contactForm" class="form">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" id="name" name="name" required>
                        </div>

                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" required>
                        </div>

                        <div class="form-group">
                            <label for="subject">Subject</label>
                            <select id="subject" name="subject" required>
                                <option value="">Select a subject</option>
                                <option value="general">General Inquiry</option>
                                <option value="support">Technical Support</option>
                                <option value="business">Business Inquiry</option>
                                <option value="feedback">Feedback</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="message">Message</label>
                            <textarea id="message" name="message" rows="6" required></textarea>
                        </div>

                        <button type="submit" class="cta-button">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section> 